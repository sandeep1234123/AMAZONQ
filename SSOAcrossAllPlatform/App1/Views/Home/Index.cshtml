@{
    ViewData["Title"] = "Application 1 - Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h4><i class="fas fa-desktop me-2"></i>Application 1</h4>
                    <small>Business Application Portal</small>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(ViewBag.Error))
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle"></i> @ViewBag.Error
                        </div>
                    }
                    
                    <div class="text-center mb-4">
                        @if (ViewBag.SSOActive == true)
                        {
                            <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                            <h5 class="text-success">SSO Active</h5>
                            <p class="text-muted">@(ViewBag.SSOMessage ?? "Authenticated via Single Sign-On")</p>
                        }
                        else
                        {
                            <i class="fas fa-lock fa-3x text-primary mb-3"></i>
                            <h5>SSO Not Active</h5>
                            <p class="text-muted">Please authenticate to access Application 1</p>
                        }
                    </div>
                    
                    <form method="post" action="/Home/AuthenticateApp1">
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="fas fa-envelope me-2"></i>Email/Username
                            </label>
                            <input type="text" class="form-control" name="username" placeholder="Enter your email" required>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="fas fa-lock me-2"></i>Password
                            </label>
                            <input type="password" class="form-control" name="password" placeholder="Enter your password" required>
                        </div>

                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-sign-in-alt me-2"></i>Login to App1
                            </button>
                        </div>
                    </form>
                    
                    <div class="text-center">
                        <div class="divider my-3">
                            <span class="text-muted">OR</span>
                        </div>
                        
                        @if (ViewBag.SSOActive == true)
                        {
                            <a href="/Home/Dashboard" class="btn btn-success btn-lg">
                                <i class="fas fa-tachometer-alt me-2"></i>Access Dashboard
                            </a>
                        }
                        else
                        {
                            <a href="http://localhost:5000" class="btn btn-outline-success">
                                <i class="fas fa-link me-2"></i>Use SSO Portal
                            </a>
                            <br><br>
                            <a href="/Home/LoginWithKeycloak" class="btn btn-outline-primary">
                                <i class="fas fa-key me-2"></i>Login with Keycloak
                            </a>
                        }
                    </div>
                    
                    <div class="mt-3">
                        <h6><i class="fas fa-users"></i> Test Users</h6>
                        <div class="small text-muted">
                            • <strong>app1user</strong> / App1Pass123<br>
                            • <strong>multiuser</strong> / Multi123! (App1+App2)<br>
                            • <strong>manager</strong> / Manager123! (All Apps)
                        </div>
                    </div>
                    
                    <hr class="my-4">
                    
                    <div class="row text-center">
                        <div class="col-4">
                            <i class="fas fa-chart-bar fa-2x text-info mb-2"></i>
                            <small class="d-block">Analytics</small>
                        </div>
                        <div class="col-4">
                            <i class="fas fa-users fa-2x text-success mb-2"></i>
                            <small class="d-block">User Management</small>
                        </div>
                        <div class="col-4">
                            <i class="fas fa-cog fa-2x text-warning mb-2"></i>
                            <small class="d-block">Settings</small>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <small class="text-muted">
                        <a href="http://localhost:5000" class="text-decoration-none">
                            <i class="fas fa-home me-1"></i>SSO Portal
                        </a>
                        |
                        <a href="http://localhost:5102" class="text-decoration-none">
                            <i class="fas fa-desktop me-1"></i>Application 2
                        </a>
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

<style>
    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
    }
    
    .card {
        border: none;
        border-radius: 15px;
    }
    
    .card-header {
        border-radius: 15px 15px 0 0 !important;
    }
    
    .btn:hover {
        transform: translateY(-2px);
        transition: all 0.3s ease;
    }
</style>