@{
    ViewData["Title"] = "Application 1 - Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3><i class="fas fa-desktop me-2"></i>Application 1</h3>
                    <p class="mb-0">Business Management Portal</p>
                </div>
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="fas fa-user-circle fa-4x text-primary mb-3"></i>
                        <h5>Login to Application 1</h5>
                    </div>

                    <form method="post" action="/Home/AuthenticateApp1">
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="fas fa-envelope me-2"></i>Email/Username
                            </label>
                            <input type="text" class="form-control" name="username" placeholder="Enter your email" required>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="fas fa-lock me-2"></i>Password
                            </label>
                            <input type="password" class="form-control" name="password" placeholder="Enter your password" required>
                        </div>

                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-sign-in-alt me-2"></i>Login to App1
                            </button>
                        </div>
                    </form>

                    <div class="text-center">
                        <div class="divider my-3">
                            <span class="text-muted">OR</span>
                        </div>
                        
                        <a href="http://localhost:5000" class="btn btn-outline-success">
                            <i class="fas fa-link me-2"></i>Use SSO Portal
                        </a>
                    </div>
                </div>
                
                <div class="card-footer text-center bg-light">
                    <small class="text-muted">
                        <a href="http://localhost:5000" class="text-decoration-none me-3">
                            <i class="fas fa-home me-1"></i>SSO Portal
                        </a>
                        <a href="http://localhost:5102" class="text-decoration-none">
                            <i class="fas fa-desktop me-1"></i>Application 2
                        </a>
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

<style>
    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
    }
    
    .card {
        border: none;
        border-radius: 15px;
    }
    
    .divider {
        position: relative;
    }
    
    .divider::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 0;
        right: 0;
        height: 1px;
        background: #dee2e6;
    }
    
    .divider span {
        background: white;
        padding: 0 15px;
    }
    
    .btn:hover {
        transform: translateY(-2px);
        transition: all 0.3s ease;
    }
</style>