@{
    ViewData["Title"] = "Application 1 Dashboard";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-0"><i class="fas fa-tachometer-alt me-2"></i>@ViewBag.AppName Dashboard</h4>
                        <small>Welcome, @ViewBag.UserName (@ViewBag.Email)</small>
                    </div>
                    <div>
                        <a href="http://localhost:5000" class="btn btn-outline-light btn-sm me-2">
                            <i class="fas fa-home me-1"></i>SSO Portal
                        </a>
                        <a href="http://localhost:5102" class="btn btn-outline-light btn-sm me-2">
                            <i class="fas fa-exchange-alt me-1"></i>Switch to App2
                        </a>
                        <a href="@Url.Action("Logout")" class="btn btn-outline-light btn-sm">
                            <i class="fas fa-sign-out-alt me-1"></i>Logout
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <!-- User Status Section -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="card border-primary">
                                <div class="card-body">
                                    <h6 class="card-title"><i class="fas fa-user-check me-2"></i>Active User Status</h6>
                                    <ul class="list-unstyled mb-0">
                                        <li><strong>User ID:</strong> @(User.FindFirst("sub")?.Value ?? "N/A")</li>
                                        <li><strong>Name:</strong> @ViewBag.UserName</li>
                                        <li><strong>Email:</strong> @ViewBag.Email</li>
                                        <li><strong>Application:</strong> @ViewBag.AppName</li>
                                        <li><strong>Login Time:</strong> @DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")</li>
                                        <li><strong>Session Status:</strong> <span class="badge bg-success">Active</span></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card border-success">
                                <div class="card-body">
                                    <h6 class="card-title"><i class="fas fa-shield-alt me-2"></i>User Roles & Permissions</h6>
                                    <div class="mb-3">
                                        <strong>Assigned Roles:</strong><br>
                                        @if (ViewBag.Roles != null && ((List<string>)ViewBag.Roles).Any())
                                        {
                                            @foreach (var role in (List<string>)ViewBag.Roles)
                                            {
                                                <span class="badge bg-primary me-1">@role</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">No roles assigned</span>
                                        }
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-check-circle text-success fa-2x me-3"></i>
                                        <div>
                                            <strong class="text-success">SSO Authenticated</strong><br>
                                            <small class="text-muted">Single Sign-On active</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Application Features -->
                    <div class="row">
                        <div class="col-md-4 mb-4">
                            <div class="card">
                                <div class="card-header">
                                    <h6 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Sales Overview</h6>
                                </div>
                                <div class="card-body">
                                    <canvas id="salesChart" width="400" height="200"></canvas>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-4">
                            <div class="card">
                                <div class="card-header">
                                    <h6 class="mb-0"><i class="fas fa-users me-2"></i>User Activity</h6>
                                </div>
                                <div class="card-body">
                                    <canvas id="activityChart" width="400" height="200"></canvas>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-4">
                            <div class="card">
                                <div class="card-header">
                                    <h6 class="mb-0"><i class="fas fa-chart-line me-2"></i>Performance</h6>
                                </div>
                                <div class="card-body">
                                    <canvas id="performanceChart" width="400" height="200"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Dummy Stats -->
                    <div class="row mb-4">
                        <div class="col-md-3 mb-3">
                            <div class="card bg-primary text-white">
                                <div class="card-body text-center">
                                    <i class="fas fa-users fa-2x mb-2"></i>
                                    <h4>1,247</h4>
                                    <small>Active Users</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="card bg-success text-white">
                                <div class="card-body text-center">
                                    <i class="fas fa-dollar-sign fa-2x mb-2"></i>
                                    <h4>$89,432</h4>
                                    <small>Revenue</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="card bg-warning text-white">
                                <div class="card-body text-center">
                                    <i class="fas fa-shopping-cart fa-2x mb-2"></i>
                                    <h4>342</h4>
                                    <small>Orders</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="card bg-info text-white">
                                <div class="card-body text-center">
                                    <i class="fas fa-chart-line fa-2x mb-2"></i>
                                    <h4>94%</h4>
                                    <small>Growth</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Keycloak Details -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="card border-info">
                                <div class="card-header bg-info text-white">
                                    <h6 class="mb-0"><i class="fas fa-key me-2"></i>Keycloak Authentication Details</h6>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <ul class="list-unstyled">
                                                <li><strong>Realm:</strong> sso-realm</li>
                                                <li><strong>Client ID:</strong> app1-client</li>
                                                <li><strong>Auth Server:</strong> http://localhost:8080</li>
                                                <li><strong>Token Issuer:</strong> @(User.FindFirst("iss")?.Value ?? "N/A")</li>
                                            </ul>
                                        </div>
                                        <div class="col-md-6">
                                            <ul class="list-unstyled">
                                                <li><strong>Session ID:</strong> @(User.FindFirst("sid")?.Value ?? "N/A")</li>
                                                <li><strong>Token Type:</strong> Bearer</li>
                                                <li><strong>Auth Method:</strong> OpenID Connect</li>
                                                <li><strong>SSO Status:</strong> <span class="badge bg-success">Active</span></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Quick Actions -->
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <div class="card bg-gradient-primary text-white">
                                <div class="card-body text-center">
                                    <i class="fas fa-plus fa-2x mb-2"></i>
                                    <h5>Create</h5>
                                    <small>New Project</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="card bg-gradient-success text-white">
                                <div class="card-body text-center">
                                    <i class="fas fa-edit fa-2x mb-2"></i>
                                    <h5>Manage</h5>
                                    <small>Existing Items</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="card bg-gradient-warning text-white">
                                <div class="card-body text-center">
                                    <i class="fas fa-chart-pie fa-2x mb-2"></i>
                                    <h5>Reports</h5>
                                    <small>Analytics</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="card bg-gradient-info text-white">
                                <div class="card-body text-center">
                                    <i class="fas fa-cog fa-2x mb-2"></i>
                                    <h5>Settings</h5>
                                    <small>Configuration</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- SSO Navigation -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="card border-info">
                                <div class="card-body text-center">
                                    <h6><i class="fas fa-network-wired me-2"></i>SSO Platform Navigation</h6>
                                    <div class="btn-group" role="group">
                                        <a href="http://localhost:5000" class="btn btn-outline-primary">
                                            <i class="fas fa-home me-1"></i>Common Login Portal
                                        </a>
                                        <button class="btn btn-primary" disabled>
                                            <i class="fas fa-desktop me-1"></i>Application 1 (Current)
                                        </button>
                                        <a href="http://localhost:5102" class="btn btn-outline-info">
                                            <i class="fas fa-desktop me-1"></i>Application 2
                                        </a>
                                    </div>
                                    <div class="mt-3">
                                        <small class="text-muted">
                                            <i class="fas fa-shield-alt me-1"></i>
                                            Seamless switching between applications with Single Sign-On
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

<script>
// Sales Chart
const salesCtx = document.getElementById('salesChart').getContext('2d');
new Chart(salesCtx, {
    type: 'bar',
    data: {
        labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May'],
        datasets: [{
            label: 'Sales',
            data: [12, 19, 15, 25, 22],
            backgroundColor: 'rgba(54, 162, 235, 0.6)'
        }]
    },
    options: { responsive: true }
});

// Activity Chart
const activityCtx = document.getElementById('activityChart').getContext('2d');
new Chart(activityCtx, {
    type: 'doughnut',
    data: {
        labels: ['Active', 'Inactive', 'Pending'],
        datasets: [{
            data: [65, 25, 10],
            backgroundColor: ['#28a745', '#dc3545', '#ffc107']
        }]
    },
    options: { responsive: true }
});

// Performance Chart
const performanceCtx = document.getElementById('performanceChart').getContext('2d');
new Chart(performanceCtx, {
    type: 'line',
    data: {
        labels: ['Week 1', 'Week 2', 'Week 3', 'Week 4'],
        datasets: [{
            label: 'Performance',
            data: [85, 92, 88, 95],
            borderColor: 'rgba(75, 192, 192, 1)',
            tension: 0.4
        }]
    },
    options: { responsive: true }
});
</script>

<style>
    body { background-color: #f8f9fa; }
    .card { border: none; border-radius: 10px; }
    .btn:hover { transform: translateY(-2px); transition: all 0.3s ease; }
</style>