@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Application 3</h1>
    <p>Please login to access the application features.</p>
    
    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }
    
    <div class="mt-4">
        <a asp-action="Login" class="btn btn-primary">Login to Application 3</a>
    </div>
</div>