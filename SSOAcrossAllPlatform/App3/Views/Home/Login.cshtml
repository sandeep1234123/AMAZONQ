@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3>Login to Application 3</h3>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(ViewBag.Error))
                {
                    <div class="alert alert-danger">@ViewBag.Error</div>
                }
                
                <form asp-action="AuthenticateApp3" method="post">
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" class="form-control" id="username" name="username" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password" required>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Login</button>
                </form>
                
                <hr>
                <div class="text-center">
                    <p><strong>Recommended:</strong> Use Active Directory</p>
                    <a asp-action="LoginWithAD" class="btn btn-success w-100 mb-2">
                        <i class="fas fa-building"></i> Login with Active Directory
                    </a>
                    <small class="text-muted">Uses your company credentials via Keycloak SSO</small>
                </div>
            </div>
        </div>
    </div>
</div>