{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Keycloak": {
    "Authority": "http://localhost:8081/realms/sso-realm",
    "ClientId": "magic-link-app",
    "ClientSecret": "magic-link-secret-2025",
    "RequireHttpsMetadata": false,
    "ResponseType": "code",
    "Scope": "openid profile email",
    "SaveTokens": true,
    "GetClaimsFromUserInfoEndpoint": true
  },
  "Email": {
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "Username": "your-email@gmail.com",
    "Password": "your-app-password",
    "FromEmail": "noreply@magiclink.com",
    "FromName": "Magic Link App"
  },
  "MagicLink": {
    "ExpiryMinutes": 15,
    "BaseUrl": "http://localhost:5200",
    "SecretKey": "your-secret-key-for-token-generation"
  }
}